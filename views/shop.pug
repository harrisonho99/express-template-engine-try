extends template/template.pug

block content 
    if hasProduct
        h3 My Products
        .container
            .row.row-product
                each book in products 
                    .col.s12.m6.l4.card-wrapper
                        .card.set-card
                            .card-image
                                img(src=`${book.imgURL}`, alt=`${book.title}`)
                                span.product-title #{book.title}
                                span.price-tag.left.halfway-fab #{book.price}$
                                button.love-btn.halfway-fab.waves-effect.waves-light.white
                                    i.material-icons#love-border favorite_border
                            .card-content.card-desc
                                p #{book.desc}
    else
        h3 No Products Found.


